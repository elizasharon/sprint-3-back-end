<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="man" class="com.pack.springdemo.Man">
		<constructor-arg name="name" value="Sheldon" />
		<constructor-arg name="age" value="45" />
		<constructor-arg name="address" ref="m_address"/>
	</bean>
	<bean id="woman" class="com.pack.springdemo.Woman">
		<property name="name" value="Cooper" />
		<property name="age" value="25" />
		<property name="address" ref="w_address"/>
	</bean>
	<bean id="m_address" class="com.pack.springdemo.Address">
		<property name="state" value="TamilNadu" />
		<property name="city" value="Chennai" />
		<property name="pin" value="600089" />
	</bean>
	<bean id="w_address" class="com.pack.springdemo.Address">
		<property name="state" value="TamilNadu" />
		<property name="city" value="Pondichery" />
		<property name="pin" value="600300" />
	</bean>

</beans>